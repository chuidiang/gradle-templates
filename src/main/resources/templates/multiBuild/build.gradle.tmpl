buildscript { 
  repositories { 
    ivy { 
      url 'http://dl.bintray.com/content/djmijares/gradle-plugins'
    }
  }

  dependencies {
    classpath 'com.jacobo.gradle:gradle-templates:1.3.1-SNAPSHOT'
  }
}

apply plugin: 'multi-project-templates'

allprojects { 
  repositories { 
    mavenCentral()
  }
}

subprojects { subProject ->
  apply plugin: 'templates'  
}